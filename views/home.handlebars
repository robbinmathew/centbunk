<!-- /home.handlebars -->
{{#if user}}
    <head>
        <script type="text/javascript" src="js/bunk-models.js"></script>
        <script type="text/javascript" src="js/stock-receipts.js"></script>
        <script type="text/javascript" src="js/rate-change.js"></script>
        <script type="text/javascript" src="js/daily-statement.js"></script>
        <script type="text/javascript" src="js/party-viewer.js"></script>
        <script type="text/javascript" src="js/reports.js"></script>
        <script type="text/javascript" src="js/app.js"></script>
        <script type="text/javascript">
            var username = '{{user}}';
        </script>

    </head>
    <body>
	<div class="jumbotron">
    		<h1>User Authentication</h1>
  	</div>
	
	<div class="panel panel-default">
    		<div class="panel-heading">
      			<h3 class="panel-title">Profile Information</h3>
		</div>

    		<div class="panel-body">
      			<p>Username: {{user}}</p>
    		</div>
  	</div>
    </body>
{{else}}
    <body>
	<!--No user. Provide the signin page-->
  	<div class="jumbotron">
		<h1>Please sign in</h1>
  	</div>
	<form id="local-sign-in" class="collapse" action="/login" method="post">
		<div>
			<p></p>
			<label>User name:</label>
			<input type="text" name="username"/>
		</div>
      		<div>
			<label>Password :</label>
			<input type="password" name="password"/>
      		</div>
      		<div>
          		<input type="submit" class="btn btn-primary btn-sm" value="Log In"/>
      		</div>
   	</form>
    </body>

{{/if}}
