<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
   <appender name="pbms" class="org.apache.log4j.RollingFileAppender">
      <param name="Threshold" value="INFO"/>
      <param name="File" value="${app.root}/logs/pbms.log"/>
      <param name="MaxFileSize" value="10MB"/>
      <param name="MaxBackupIndex" value="5"/>
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d %-5p[PBMS] (%F:%L) %m %n"/>
      </layout>
   </appender>
   <appender name="console" class="org.apache.log4j.ConsoleAppender">
      <param name="Threshold" value="INFO"/>
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d %-5p[PBMS] (%F:%L) %m %n"/>
      </layout>
   	</appender>
   	<logger name="org.hibernate">
      <level value="ERROR"/>
  	</logger>
  	<logger name="net.sf.jasperreports.engine.xml.JRXmlDigesterFactory">
      <level value="ERROR"/>
  	</logger>
   	<logger name="net.sf.jasperreports.engine.xml.JRBandFactory">
      <level value="ERROR"/>
  	</logger>
   	<root>
 	  <level value="DEBUG" />
      <appender-ref ref="pbms"/>
      <appender-ref ref="console"/>
  	</root>
 </log4j:configuration>
